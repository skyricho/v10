
<div class="m-3">
  <a href="?Map={{ mapNumber }}&Street={{ streetWithDash }}"><i class="fas fa-angle-left"></i> Back to address list</a>
</div>

<p class="m-3">{{ streetNumber }} {{ street }} <i class="far fa-building"></i></p>
<ul class="list-group">
  {% for housing_unit in housing_units %}
  	{% if housing_unit.cStatus == 'ah' %}
  	  <!-- Contacted -->
      <li id="{{ streetNumber }}-unit-{{ housing_unit.Number }}" class="list-group-item text-muted">
        <form id="{{ housing_unit.unitID }}-form">
          <input type="hidden" name="id" value="{{ housing_unit.unitID }}">
          <input type="hidden" name="notHome" value="">
          <input type="hidden" name="streetNumber" value="{{ streetNumber }}">
          <input type="hidden" name="housingUnitNumber" value="{{ housing_unit.Number }}">
          <div class="d-flex justify-content-between text-muted">
            <div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="{{ housing_unit.unitID }}-checkbox" ic-post-to="updateUnitStatus.php" ic-target="#{{ streetNumber }}-unit-{{ housing_unit.Number }}" ic-confirm="Are you sure?" checked>
                <label class="form-check-label" for="defaultCheck1">
                  Unit {{ housing_unit.Number }}       
                </label>
              </div>
            </div>
            <div>
              <i class="fas fa-mail-bulk"></i> Letter sent
            </div>
        </form>
      </li>
  	{% elseif housing_unit.cStatus == 'dnc' %}
  	  <!-- DNC -->
  	  <li id="{{ streetNumber }}-unit-{{ housing_unit.Number }}" class="list-group-item">
  	    <div class="form-check">
          <input class="form-check-input" type="checkbox" value="" id="{{ address.recID }}-checkbox" disabled>
          <label class="form-check-label" for="defaultCheck1">
            <span class="badge badge-danger">DNC</span> Unit {{ housing_unit.Number }}
          </label>
        </div>        
  	{% else %}
  	  <!-- Default: Not contacted yet -->
      <li id="{{ streetNumber }}-unit-{{ housing_unit.Number }}" class="list-group-item">
        <form id="{{ housing_unit.unitID }}-form">
	      <input type="hidden" name="id" value="{{ housing_unit.unitID }}">
	      <input type="hidden" name="isHome" value="">
	      <input type="hidden" name="streetNumber" value="{{ streetNumber }}">
	      <input type="hidden" name="housingUnitNumber" value="{{ housing_unit.Number }}">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="{{ housing_unit.unitID }}-checkbox" ic-post-to="updateUnitStatus.php" ic-target="#{{ streetNumber }}-unit-{{ housing_unit.Number }}">
            <label class="form-check-label" for="defaultCheck1">
              Unit {{ housing_unit.Number }} {{ housing_unit.cStatus }}
            </label>
          </div>
        </form>
      </li>
  	{% endif %}
  {% endfor %}
</ul>